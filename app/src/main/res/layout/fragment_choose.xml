<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="#F4F4F4"
              tools:context="com.huadi.android.ainiyo.frag.ChooseFragment">

    <LinearLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titile_bar_height"
        android:gravity="center_vertical"
        android:background="@color/theme_blue"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="38dp"
            android:text="聊天"
            android:textSize="@dimen/top_title_text_size"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/btn_friends"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginRight="8dp"
            android:background="@color/theme_blue"
            android:src="@drawable/friend_button" />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/fri_recycler_view"
        android:background="#ffffff"
        >

    </android.support.v7.widget.RecyclerView>
</LinearLayout>

