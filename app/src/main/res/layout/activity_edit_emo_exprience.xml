<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/parting_line"
    tools:context="com.huadi.android.ainiyo.activity.ComplainActivity">

    <RelativeLayout
        android:id="@+id/emotion_experience_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titile_bar_height"
        android:background="@color/theme_blue">

        <LinearLayout
            android:layout_marginLeft="@dimen/me_fragment_clearance_weight"
            android:layout_width="@dimen/top_title_pic_size"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/emotion_experience_back"
                android:layout_gravity="center_vertical"
                android:layout_width="@dimen/top_title_pic_size"
                android:layout_height="@dimen/top_title_pic_size"
                android:src="@drawable/leftarrow" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="情感经历"
            android:textSize="18sp"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/emotion_experience_publish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="保存"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:gravity="center" />

    </RelativeLayout>

    <EditText
        android:id="@+id/et_emotion_experience"
        android:layout_below="@+id/emotion_experience_topbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:gravity="top"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:maxLength="50"
        android:hint=""
        android:background="@color/white"
        android:textColorHint="#726e6e" />

    <TextView
        android:id="@+id/emotion_experience_text_num"
        android:layout_below="@+id/et_emotion_experience"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-20dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:textSize="16sp" />

</RelativeLayout>
