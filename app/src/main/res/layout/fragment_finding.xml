<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huadi.android.ainiyo.frag.FindingFragment"
    android:weightSum="1"
    android:background="@color/theme_red">


    <RelativeLayout
        android:id="@+id/title_bar_finding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titile_bar_height"
        android:background="@color/theme_red">



        <TextView
            android:id="@+id/txt_topbar_finding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="推荐"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/btn_finding_go"
            android:layout_width="@dimen/titile_bar_icon_size"
            android:layout_height="@dimen/titile_bar_icon_size"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_tab_finding_search" />


    </RelativeLayout>


    <!--<com.handmark.pulltorefresh.library.PullToRefreshListView-->
    <!--android:id="@+id/finding_list_view"-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="fill_parent"-->
    <!--android:divider="#00000000"-->
    <!--android:dividerHeight="0dip"-->
    <!--android:background="#ebe3e3"-->
    <!--android:layout_weight="1"></com.handmark.pulltorefresh.library.PullToRefreshListView>-->

    <android.support.v7.widget.RecyclerView
        android:background="@color/theme_red"
        android:id="@+id/finding_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:layout_weight="2.13" />

    <!--<include layout="@layout/finding_loul_buttons" />-->
    <include layout="@layout/finding_wisdom" />
</LinearLayout>
