<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_add_friend"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#F3485D"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    </android.support.v7.widget.Toolbar>

    <com.huadi.android.ainiyo.definedView.ClearEditText
        android:id="@+id/search_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f8f9f7"
        android:drawableLeft="@drawable/search_bar_icon_normal"
        android:hint="@string/search_hint"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:textSize="15dp"/>
    <Button
        android:id="@+id/search_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/search_fri"
        />
    <EditText
        android:id="@+id/attach_text"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:padding="10dp"
        android:hint="@string/attach"
        android:gravity="top|left"
        android:theme="@style/MyEditText"
        />
</LinearLayout>