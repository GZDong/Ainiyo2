<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titile_bar_height"
        android:background="@color/theme_blue"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="我的"
            android:textSize="@dimen/title_size"
            android:textColor="@color/white" />
    </LinearLayout>

    <ScrollView
        android:background="@color/parting_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/me_fragment_clearance_height"
                android:background="@color/parting_line" />

            <LinearLayout
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar_imag"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/me_fragment_clearance_weight"
                    android:src="@mipmap/ic_default_avater" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="用户名"
                        android:textColor="@color/text_color"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/job_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="@dimen/me_fragment_text_size" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="@dimen/me_fragment_clearance_weight"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/qrcode" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/me_fragment_clearance_height"
                android:background="@color/parting_line" />

            <LinearLayout
                android:id="@+id/vip_lever"
                android:layout_width="match_parent"
                android:layout_height="@dimen/me_fragment_height">

                <ImageView
                    android:layout_width="@dimen/me_fragment_pic_size"
                    android:layout_height="@dimen/me_fragment_pic_size"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/me_fragment_clearance_weight"
                    android:src="@mipmap/vip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/me_fragment_clearance_weight"
                    android:text="用户级别"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/me_fragment_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/vip_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/me_fragment_clearance_weight"
                    android:textSize="@dimen/me_fragment_text_size" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/me_fragment_clearance_weight"
                android:layout_marginLeft="@dimen/me_fragment_clearance_weight"
                android:layout_height="1dp"
                android:background="@color/parting_line" />


            <LinearLayout
                android:id="@+id/vipapply"
                android:layout_width="match_parent"
                android:layout_height="@dimen/me_fragment_height">

                <ImageView
                    android:layout_width="@dimen/me_fragment_pic_size"
                    android:layout_height="@dimen/me_fragment_pic_size"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/me_fragment_clearance_weight"
                    android:src="@mipmap/request" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/me_fragment_clearance_weight"
                    android:text="VIP申请"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/me_fragment_text_size" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/me_fragment_clearance_height"
                android:background="@color/parting_line" />

            <LinearLayout
                android:id="@+id/xiangce"
                android:layout_width="match_parent"
                android:layout_height="@dimen/me_fragment_height">

                <ImageView
                    android:layout_width="@dimen/me_fragment_pic_size"
                    android:layout_height="@dimen/me_fragment_pic_size"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/me_fragment_clearance_weight"
                    android:src="@mipmap/photos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/me_fragment_clearance_weight"
                    android:text="相册"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/me_fragment_text_size" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/me_fragment_clearance_weight"
                android:layout_marginLeft="@dimen/me_fragment_clearance_weight"
                android:layout_height="1dp"
                android:background="@color/parting_line" />

            <LinearLayout
                android:id="@+id/activity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/me_fragment_height">

                <ImageView
                    android:layout_width="@dimen/me_fragment_pic_size"
                    android:layout_height="@dimen/me_fragment_pic_size"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/me_fragment_clearance_weight"
                    android:src="@mipmap/activity" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/me_fragment_clearance_weight"
                    android:text="参加活动"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/me_fragment_text_size" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/me_fragment_clearance_height"
                android:background="@color/parting_line" />


            <LinearLayout
                android:id="@+id/manager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/me_fragment_height">

                <ImageView
                    android:layout_width="@dimen/me_fragment_pic_size"
                    android:layout_height="@dimen/me_fragment_pic_size"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/me_fragment_clearance_weight"
                    android:src="@mipmap/admin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/me_fragment_clearance_weight"
                    android:text="管理员"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/me_fragment_text_size" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/me_fragment_clearance_weight"
                android:layout_marginLeft="@dimen/me_fragment_clearance_weight"
                android:layout_height="1dp"
                android:background="@color/parting_line" />

            <LinearLayout
                android:id="@+id/version"
                android:layout_width="match_parent"
                android:layout_height="@dimen/me_fragment_height">

                <ImageView
                    android:layout_width="@dimen/me_fragment_pic_size"
                    android:layout_height="@dimen/me_fragment_pic_size"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/me_fragment_clearance_weight"
                    android:src="@mipmap/ic_frag_me_version" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/me_fragment_clearance_weight"
                    android:text="关于"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/me_fragment_text_size" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/me_fragment_clearance_weight"
                android:layout_marginLeft="@dimen/me_fragment_clearance_weight"
                android:layout_height="1dp"
                android:background="@color/parting_line" />

            <LinearLayout
                android:id="@+id/logoff"
                android:layout_width="match_parent"
                android:layout_height="@dimen/me_fragment_height">

                <ImageView
                    android:layout_width="@dimen/me_fragment_pic_size"
                    android:layout_height="@dimen/me_fragment_pic_size"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/me_fragment_clearance_weight"
                    android:src="@mipmap/exit" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/me_fragment_clearance_weight"
                    android:text="退出"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/me_fragment_text_size" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
