<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/status_bar_finding_user_info"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:background="@color/theme_blue"
            android:visibility="gone"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:background="@color/theme_blue">

            <ImageView
                android:id="@+id/iv_finding_userinfo_back"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@mipmap/back" />

            <TextView
                android:id="@+id/txt_topbar_finding_user_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="30dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="个人信息"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <ImageView
                app:srcCompat="@mipmap/girl3"
                android:id="@+id/iv_finding_userinfo_background"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/girl3" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_finding_userinfo_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/girl4"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFF"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-70dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:text="刘奕宁"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_finding_userinfo_username"
                android:textSize="30sp"
                android:layout_gravity="center_horizontal"
                android:padding="5dp"
                android:textAlignment="center" />

            <TextView
                android:text="运气绝不是守株待兔等来的！"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_finding_userinfo_signField"
                android:textColor="#696969"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:textAlignment="center" />

            <TextView
                android:text="女 25 成都"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_finding_userinfo_describe"
                android:textAlignment="center"
                android:textSize="15sp"
                android:padding="5dp" />


            <ListView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/ll_finding_userinfo"
                android:divider="?android:attr/dividerVertical"
                android:showDividers="beginning" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="beginning">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/girl1" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/girl2" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/girl3" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/girl4" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:text="添加好友"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_finding_add_friend"
            android:background="#d26165"
            android:textColor="#FFF" />


    </LinearLayout>

</ScrollView>



