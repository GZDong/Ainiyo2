                android:layout_marginLeft="13dp"
                android:text="David Joanthen"
                android:textColor="@color/theme_blue"
                android:textSize="15sp"
                android:layout_alignTop="@+id/mode_pic_head"
                android:layout_toRightOf="@+id/mode_pic_head"
                android:layout_toEndOf="@+id/mode_pic_head"
                android:layout_marginStart="13dp" />

            <TextView
                android:id="@+id/mode_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="June 1,2017"
                android:textSize="15sp"
                android:layout_alignBottom="@+id/mode_username"
                android:layout_alignRight="@+id/mode_pic_content"
                android:layout_alignEnd="@+id/mode_pic_content" />

            <ImageView
                android:id="@+id/mode_pic_content"
                android:scaleType="centerCrop"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="60dp"
                android:layout_marginRight="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/mode_pic_content"
                android:layout_alignStart="@+id/mode_pic_content"
                android:layout_below="@+id/mode_content">

            </LinearLayout>

            <TextView
                android:id="@+id/mode_content"
                android:textSize="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
